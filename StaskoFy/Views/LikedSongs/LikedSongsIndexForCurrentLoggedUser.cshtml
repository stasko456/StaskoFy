@model List<LikedSongsIndexViewModel>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">

                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">
                            <i class="bi bi-heart-fill text-danger"></i>
                            Your <span class="text-warning">Liked Songs</span>
                        </h2>
                        <p class="text-muted mb-0">
                            @Model.Count Songs
                        </p>
                    </div>

                    <hr class="mb-4" />

                    <!-- Songs List -->
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">

                            <thead class="bg-light text-secondary">
                                <tr class="small text-uppercase">
                                    <th class="ps-3">#</th>
                                    <th>Song</th>
                                    <th>Album</th>
                                    <th>Length</th>
                                    <th>Artists</th>
                                    <th>Date Added</th>
                                </tr>
                            </thead>

                            <tbody>
                                @{
                                    int index = 1;
                                }

                                @foreach (var song in Model)
                                {
                                    <tr class="border-top">

                                        <!-- Index -->
                                        <td class="ps-3 text-muted fw-semibold">
                                            @index
                                        </td>

                                        <!-- Song + Image -->
                                        <td class="fw-semibold text-dark">
                                            <div class="d-flex align-items-center gap-3">
                                                <img src="@song.ImageUrl"
                                                     alt="@song.Title"
                                                     width="50"
                                                     height="50"
                                                     class="rounded shadow-sm" />

                                                <span>@song.Title</span>
                                            </div>
                                        </td>

                                        <!-- Album -->
                                        <td class="text-muted">
                                            @song.AlbumTitle
                                        </td>

                                        <!-- Length -->
                                        <td class="text-muted">
                                            @song.Minutes:@song.Seconds.ToString("D2")
                                        </td>

                                        <!-- Artists -->
                                        <td>
                                            @foreach (var artist in song.Artists)
                                            {
                                                <span class="badge bg-light text-dark border rounded-pill me-1 px-3">
                                                    @artist
                                                </span>
                                            }
                                        </td>

                                        <!-- Date Added -->
                                        <td class="text-muted">
                                            @song.DateAdded.ToString("dd MMM yyyy")
                                        </td>

                                    </tr>

                                    index++;
                                }

                            </tbody>

                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
