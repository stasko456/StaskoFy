@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="text-center text-light">
        <h1 class="display-4 fw-bold mb-3">
            Welcome to <span class="text-warning">StaskoFy</span>
        </h1>

        <p class="lead text-secondary mb-4">
            Music streaming platform
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Playlist" asp-action="Create" class="btn btn-warning btn-lg">
                Create a playlist
            </a>
            <a asp-controller="Song" asp-action="SongsIndexForAllUsers" class="btn btn-warning btn-lg">
                Browse Songs
            </a>
            <a asp-controller="Album" asp-action="AlbumsIndexForAllUsers" class="btn btn-warning btn-lg">
                Browse Albums
            </a>
            @if ((User?.Identity?.IsAuthenticated ?? false) && User.IsInRole("Artist"))
            {
                <a asp-controller="Song" asp-action="Create" class="btn btn-outline-light btn-lg">
                    Upload Music
                </a>
                <a asp-controller="Album" asp-action="Create" class="btn btn-outline-light btn-lg">
                    Upload Album
                </a>
            }
        </div>
    </div>
</div>