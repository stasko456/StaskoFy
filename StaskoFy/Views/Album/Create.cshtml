@model AlbumCreateViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <h2 class="text-center mb-3 fw-bold">
                        <i class="bi bi-music-note-beamed"></i> Create <span class="text-success">Album</span>
                    </h2>
                    <form method="post" asp-action="Create">
                        <div class="row g-4">
                            <div class="col-12 col-lg-6">
                                <div class="mb-3 mt-3">
                                    <label asp-for="Title" class="form-label fw-semibold"></label>
                                    <input asp-for="Title" class="form-control" placeholder="Title">
                                    <span asp-validation-for="Title" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ImageURL" class="form-label fw-semibold">Image URL</label>
                                    <input asp-for="ImageURL" class="form-control" placeholder="Image URL">
                                    <span asp-validation-for="ImageURL" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Featured Artists</label>
                                    <select 
                                        asp-for="SelectedArtistIds" 
                                        asp-items="Model.Artists" 
                                        multiple 
                                        class="form-select" 
                                        size="6"
                                        data-choices
                                        data-remove-item-button="true"
                                        data-search-enabled="true"
                                        data-placeholder-value="Select artists"
                                        data-no-results-text="No artists found"
                                        data-item-select-text="Click to select"
                                        data-should-sort="false">
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-semibold">Songs</label>
                                    <select
                                        asp-for="SelectedSongIds" 
                                        asp-items="Model.Songs" 
                                        multiple 
                                        class="form-select 
                                        size="6"
                                        data-choices
                                        data-remove-item-button="true"
                                        data-search-enabled="true"
                                        data-placeholder-value="Select songs"
                                        data-no-results-text="No songs found"
                                        data-item-select-text="Click to select"
                                        data-should-sort="false">
                                    </select>
                                    <span asp-validation-for="SelectedSongIds" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill px-5 shadow fw-semibold">Create Album</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}