@model AlbumCreateViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <h2 class="text-center mb-3 fw-bold">
                        <i class="bi bi-music-note-beamed"></i> Create <span class="text-success">Album</span>
                    </h2>
                    <form method="post" asp-action="Create">
                        <div class="row g-4">
                            <div class="col-12 col-lg-6">
                                <div class="mb-3 mt-3">
                                    <label asp-for="Title" class="form-label fw-semibold"></label>
                                    <input asp-for="Title" class="form-control" placeholder="Title">
                                    <span asp-validation-for="Title" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ImageURL" class="form-label fw-semibold">Image URL</label>
                                    <input asp-for="ImageURL" class="form-control" placeholder="Image URL">
                                    <span asp-validation-for="ImageURL" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Featured Artists</label>
                                    <select asp-for="SelectedArtistIds" asp-items="Model.Artists" id="artistSelect" multiple class="form-select"size="6"></select>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-semibold">Songs</label>
                                    <select asp-for="SelectedSongIds" asp-items="Model.Songs" id="songSelect" multiple class="form-select size="6"></select>
                                    <span asp-validation-for="SelectedSongIds" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill px-5 shadow fw-semibold">Create Album</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
        document.addEventListener('DOMContentLoaded', function () {
            const artistSelect = document.getElementById('artistSelect');

            new Choices(artistSelect, {
                removeItemButton: true,
                searchEnabled: true,
                placeholderValue: 'Select artists',
                noResultsText: 'No artists found',
                itemSelectText: 'Click to select',
                shouldSort: false
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            const artistSelect = document.getElementById('songSelect');

            new Choices(artistSelect, {
                removeItemButton: true,
                searchEnabled: true,
                placeholderValue: 'Select songs',
                noResultsText: 'No songs found',
                itemSelectText: 'Click to select',
                shouldSort: false
            });
        });
    </script>

<style>
    .choices__item {
        background-color: #0d6efd;
        color: white;
        border-radius: 0.375rem;
        padding: 0.25rem 0.5rem;
    }

    .choices__item--selectable {
        background-color: #0d6efd !important;
        color: white !important;
    }

    .choices__button {
        color: white !important;
    }
</style>