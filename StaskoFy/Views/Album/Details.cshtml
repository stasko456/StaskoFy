@model AlbumSongsIndexViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">

                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">
                            <i class="bi bi-disc"></i>
                            <span class="text-secondary">@Model.Title</span>
                        </h2>
                        <p class="text-muted mb-0">
                            @Model.Songs.Count() Songs
                        </p>
                    </div>

                    <hr class="mb-4" />

                    <!-- Songs List -->
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">

                            <thead class="bg-light text-secondary">
                                <tr class="small text-uppercase">
                                    <th class="ps-3">#</th>
                                    <th>Title</th>
                                    <th>Length</th>
                                    <th>Genre</th>
                                    <th>Artists</th>
                                </tr>
                            </thead>

                            <tbody>
                                @{
                                    int index = 1;
                                }

                                @foreach (var song in Model.Songs)
                                {
                                    <tr class="border-top">

                                        <td class="ps-3 text-muted fw-semibold">
                                            @index
                                        </td>

                                        <td class="fw-semibold text-dark">
                                            <i class="bi bi-music-note text-secondary me-2"></i>
                                            @song.Title
                                        </td>

                                        <td class="text-muted">
                                            @song.Minutes:@song.Seconds.ToString("D2")
                                        </td>

                                        <td>
                                            <span class="badge bg-secondary bg-opacity-75 rounded-pill px-3">
                                                @song.Genre
                                            </span>
                                        </td>

                                        <td>
                                            @foreach (var artist in song.Artists)
                                            {
                                                <span class="badge bg-light text-dark border rounded-pill me-1 px-3">
                                                    @artist
                                                </span>
                                            }
                                        </td>

                                    </tr>

                                    index++;
                                }

                            </tbody>

                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
