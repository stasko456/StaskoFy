@model AlbumEditViewModel

<div class="row justify-content-center mt-3">​
    <div class="col-12 col-md-6 col-lg-6 border-2 border border-dark rounded-3 p-3 fs-5">​
        <h2 class="text-center">Edit album</h2>​
        <section>​
            <form method="post" asp-action="Edit">​
                <hr />​
                <div class="form-group text-center">​
                    <label asp-for="@Model.Title" class="form-label"></label>​
                    <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>​

                <div class="form-group text-center mb-3">
                <label class="form-label">Minutes and Seconds</label>
                <div class="d-flex gap-2">
                    <input asp-for="Hours" type="number" min="0" max ="59" class="form-control"placeholder="Hours" />
                    <input asp-for="Minutes" type="number" min="0" max ="59" class="form-control"placeholder="Min" />
                    <input asp-for="Seconds" type="number" min="0" max="59" class="form-control" placeholder="Sec" />
                </div>
                <span asp-validation-for="Hours" class="text-danger"></span>
                <span asp-validation-for="Minutes" class="text-danger"></span>
                <span asp-validation-for="Seconds" class="text-danger"></span>
                </div>

                <div class="form-group text-center">​
                    <label asp-for="@Model.ReleaseDate" class="form-label"></label>​
                    <input type="date" asp-for="@Model.ReleaseDate" class="form-control" aria-required="true" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>​

                <div class="form-group text-center">​
                    <label asp-for="@Model.ImageURL" class="form-label"></label>​
                    <input asp-for="@Model.ImageURL" class="form-control" aria-required="true" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>​

                <div class="form-group text-center">
                    <label asp-for="SelectedSongIds" class="form-label">Selected Songs</label>
                    <select asp-for="SelectedSongIds" asp-items="Model.Songs" id="songSelect" multiple class="form-select"></select>
                </div>

                <div class="form-group text-center">​
                    <label asp-for="ImageURL" class="form-label"></label>​
                    <input asp-for="ImageURL" class="form-control" aria-required="true" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>​

                <div class="text-center">​
                    <button type="submit" class="btn btn-primary w-100">Edit</button>
                </div>​
            </form>
        </section>
    </div>​
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const artistSelect = document.getElementById('artistSelect');

            new Choices(artistSelect, {
                removeItemButton: true,
                searchEnabled: true,
                placeholderValue: 'Select artists',
                noResultsText: 'No artists found',
                itemSelectText: 'Click to select',
                shouldSort: false
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            const artistSelect = document.getElementById('songSelect');

            new Choices(artistSelect, {
                removeItemButton: true,
                searchEnabled: true,
                placeholderValue: 'Select songs',
                noResultsText: 'No songs found',
                itemSelectText: 'Click to select',
                shouldSort: false
            });
        });
    </script>
}


<style>
    .choices__item {
        background-color: #0d6efd;
        color: white;
        border-radius: 0.375rem;
        padding: 0.25rem 0.5rem;
    }

    .choices__item--selectable {
        background-color: #0d6efd !important;
        color: white !important;
    }

    .choices__button {
        color: white !important;
    }
</style>