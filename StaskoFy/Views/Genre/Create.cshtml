@model GenreCreateViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-xl-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <h2 class="text-center mb-4 fw-bold">
                        <i class="bi bi-music-note-beamed"></i> Create <span class="text-success">Genre</span>
                    </h2>
                    <form method="post" asp-action="Create">
                        <div class="mb-5">
                            <label asp-for="Name" class="form-label fw-semibold">Genre Name</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter genre name" aria-required="true" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill px-5 shadow">
                                Create Genre
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}