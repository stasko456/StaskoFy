@model List<ArtistIndexWithSongsAndAlbumsViewModel>

@{
    ViewData["Title"] = "Artists";
}

<div class="container py-5">

    <!-- Page Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">
            🎤 Discover <span class="text-warning">Artists</span>
        </h1>
        <p class="text-muted">Explore all artists on the platform</p>
    </div>

    <!-- Search Bar (Optional but Nice) -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-6">
            <input type="text" class="form-control form-control-lg shadow-sm"
                   placeholder="Search artists...">
        </div>
    </div>

    <!-- Artists Grid -->
    <div class="row g-4">

        @if (Model.Any())
        {
            @foreach (var artist in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card border-0 shadow-sm h-100 text-center artist-card">

                        <!-- Artist Image -->
                        <img src="@(string.IsNullOrEmpty(artist.ProfilePicture) 
                                    ? "/images/default-artist.png" 
                                    : artist.ProfilePicture)"
                             class="card-img-top rounded-circle mx-auto mt-4"
                             alt="@artist.Username"
                             style="width:150px; height:150px; object-fit:cover;">

                        <!-- Artist Info -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mt-3 fw-bold">
                                @artist.Username
                            </h5>

                            @*<p class="text-muted mb-3">
                                @artist.FollowersCount followers
                    </p>*@

                            <div class="mt-auto">
                                <a asp-controller="Artist"
                                   asp-action="Details"
                                   asp-route-id="@artist.Id"
                                   class="btn btn-warning btn-sm px-4">
                                    View Profile
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p class="text-muted fs-5">
                    No artists found.
                </p>
            </div>
        }

    </div>
</div>

<style>
    .artist-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .artist-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,.15);
    }
</style>