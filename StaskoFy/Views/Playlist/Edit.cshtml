@model PlaylistEditViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <h2 class="text-center mb-3 fw-bold">
                        <i class="bi bi-music-note-list"></i> Edit <span class="text-warning">Playlist</span>
                    </h2>
                    <form method="post" asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <div class="row g-4 align-items-stretch">
                            <!-- LEFT COLUMN -->
                            <div class="col-12 col-lg-6 d-flex">
                                <div class="w-100">
                                    <!-- Title -->
                                    <div class="mb-3">
                                        <label asp-for="Title" class="form-label fw-semibold">Playlist Title</label>
                                        <input asp-for="Title" class="form-control" placeholder="Playlist Title" aria-required="true" />
                                        <span asp-validation-for="Title" class="text-danger small"></span>
                                    </div>

                                    <!-- Date Created -->
                                    <div class="mb-3">
                                        <label asp-for="DateCreated" class="form-label fw-semibold">Date Created</label>
                                        <input type="date" asp-for="DateCreated" class="form-control" aria-required="true" />
                                        <span asp-validation-for="DateCreated" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- RIGHT COLUMN -->
                            <div class="col-12 col-lg-6 d-flex">
                                <div class="w-100">
                                    <!-- Image URL -->
                                    <div class="mb-3">
                                        <label asp-for="ImageURL" class="form-label fw-semibold">Cover Image URL</label>
                                        <input asp-for="ImageURL" class="form-control" placeholder="Image URL" aria-required="true" />
                                        <span asp-validation-for="ImageURL" class="text-danger small"></span>
                                    </div>

                                    <!-- Selected Songs -->
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">Songs</label>
                                        <select asp-for="SelectedSongIds"
                                                asp-items="Model.Songs"
                                                multiple
                                                class="form-select
                                                size="6"
                                                data-choices
                                                data-remove-item-button="true"
                                                data-search-enabled="true"
                                                data-placeholder-value="Select songs"
                                                data-no-results-text="No songs found"
                                                data-item-select-text="Click to select"
                                                data-should-sort="false">
                                        </select>
                                        <span asp-validation-for="SelectedSongIds" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-warning btn-lg rounded-pill px-5 shadow fw-semibold">Edit Playlist</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
