@model PlaylistCreateViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <h2 class="text-center mb-3 fw-bold">
                        <i class="bi bi-music-note-list"></i> Create <span class="text-success">Playlist</span>
                    </h2>

                    <form method="post" asp-action="Create">
                        <div class="row g-4 align-items-stretch">
                            <!-- LEFT COLUMN -->
                            <div class="col-12 col-lg-6 d-flex">
                                <div class="w-100">
                                    <!-- Title -->
                                    <div class="mb-3">
                                        <label asp-for="Title" class="form-label fw-semibold">Playlist Title</label>
                                        <input asp-for="Title" class="form-control" placeholder="Enter playlist title" aria-required="true" />
                                        <span asp-validation-for="Title" class="text-danger small"></span>
                                    </div>

                                    <!-- Image URL -->
                                    <div class="mb-3">
                                        <label asp-for="ImageURL" class="form-label fw-semibold">Cover Image URL</label>
                                        <input asp-for="ImageURL" class="form-control" placeholder="Enter image URL" aria-required="true" />
                                        <span asp-validation-for="ImageURL" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- RIGHT COLUMN -->
                            <div class="col-12 col-lg-6 d-flex">
                                <div class="w-100">
                                    <!-- Selected Songs -->
                                    <div class="mb-3">
                                        <label asp-for="SelectedSongIds" class="form-label fw-semibold">Selected Songs</label>
                                        <select asp-for="SelectedSongIds" asp-items="Model.Songs" id="songSelect" multiple class="form-select"></select>
                                    </div>

                                    <!-- IsPublic Checkbox -->
                                    <div class="mb-4 mt-lg-5 form-check">
                                        <input asp-for="IsPublic" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsPublic" class="form-check-label fw-semibold">Public Playlist</label>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <!-- Submit Button -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill px-5 shadow fw-semibold">Create Playlist</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const songSelect = document.getElementById('songSelect');

            new Choices(songSelect, {
                removeItemButton: true,
                searchEnabled: true,
                placeholderValue: songSelect.dataset.label,
                noResultsText: 'No songs found',
                itemSelectText: 'Click to select',
                shouldSort: false
            });
        });
    </script>
}

<style>
    .choices__item {
        background-color: #0d6efd;
        color: white;
        border-radius: 0.375rem;
        padding: 0.25rem 0.5rem;
    }

    .choices__item--selectable {
        background-color: #0d6efd !important;
        color: white !important;
    }

    .choices__button {
        color: white !important;
    }
</style>
