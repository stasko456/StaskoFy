 @model List<PlaylistIndexViewModel>

<div class="container py-5">
    <div class="text-center text-light">
        <h1 class="display-4 fw-bold mb-3">
            Your <span class="text-warning"> Playlists</span>
        </h1>
    </div>
</div>

<div class="row g-4 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
    @foreach (var playlist in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@playlist.ImageURL" class="card-img-top" alt="@playlist.Title" style="height:180px; object-fit:cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@playlist.Title</h5>
