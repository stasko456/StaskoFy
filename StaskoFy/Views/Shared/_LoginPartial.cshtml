@using Microsoft.AspNetCore.Identity
@using StaskoFy.Models.Entities;
@inject UserManager<User> userManager
@inject SignInManager<User> signInManager

@{
    var currentLoggedUser = await userManager.GetUserAsync(User);
    var pfp = currentLoggedUser?.ImageURL.ToString();
}

<ul class="navbar-nav">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage" asp-controller="User" asp-action="Manage">Hello @User?.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="User" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" title="Profile">
                <img src="@pfp" alt="Profile"
                     class="rounded-circle"
                     style="width:30px; height:30px; object-fit:cover;">
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Login</a>
        </li>
    }
</ul>