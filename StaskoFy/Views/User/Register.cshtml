@model RegisterViewModel​

<div class="row justify-content-center mt-3">​
    <div class="col-md-4 border-2 border border-dark rounded-3 p-3 fs-6">​
        <h2 class="text-center">Register</h2>​
        <section>
            <form id="registerForm" method="post" asp-action="Register">​
                <hr />​
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <div class="form-group text-center">​
                    <label asp-for="@Model.Username" class="form-label"></label>​
                    <input asp-for="@Model.Username" class="form-control" autocomplete="username" aria-required="true"/>​
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>​
                </div>​

                <div class="form-group text-center">​
                    <label asp-for="@Model.EmailAddress" class="form-label"></label>​
                    <input asp-for="@Model.EmailAddress" class="form-control" autocomplete="username" aria-required="true"/>​
                    <span asp-validation-for="@Model.EmailAddress" class="text-danger"></span>​
                </div>​

                <div class="form-group text-center">​
                    <label asp-for="@Model.Password" class="form-label"></label>​
                    <input asp-for="@Model.Password" class="form-control" type="password" autocomplete="new-password" aria-required="true"/>​
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>​
                </div>​

                <div class="form-group text-center">​
                    <label asp-for="@Model.ConfirmPassword" class="form-label"></label>​
                    <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true"/>​
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>​
                </div>​

                <div class="form-group text-center">​
                    <label asp-for="@Model.Role" class="form-label">Role</label>
                    <select asp-for="@Model.Role" asp-items="ViewBag.Roles" class="form-select"></select>
                </div>​

                <div class="text-center">​
                    <button id="registerSubmit" type="submit" class="btn btn-primary w-100">Register</button>​
                </div>​
            </form>​
        </section>
    </div>​
</div>